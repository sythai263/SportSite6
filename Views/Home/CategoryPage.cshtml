@model Category;
@{
var category = ViewData["category"] as Category;
}

<div class="hero-area height-400 bg-img background-overlay" style="background-image: url(@(category.media.source));"></div>

<div class="main-content-wrapper section-padding-100">
	<div class="container">
		<div class="row justify-content-center">
			<!-- ============= Post Content Area Start ============= -->
			<div class="col-12 col-lg-8">
				<div class="post-content-area mb-100">
					<!-- Catagory Area -->
					<div class="world-catagory-area">
						<ul class="nav nav-tabs" id="myTab" role="tablist">
							<li class="title">@(category.title)</li>
						</ul>
						<div class="tab-content" id="myTabContent">
							<div class="tab-pane fade show active" id="all_news">
								
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- ========== Sidebar Area ========== -->
			<div class="col-12 col-md-8 col-lg-4">
				<div class="post-sidebar-area mb-100">
					<!-- Widget Area -->
					<div class="sidebar-widget-area">
						<h5 class="title">Tin HOT</h5>
						<div class="widget-content" id="hot-news">
						</div>
					</div>
				</div>
			</div>
		</div>
		</div>
		<!-- Load More btn -->
		<div class="row">
			<div class="col-12">
				<div class="load-more-btn mt-50 text-center">
					<a href="#" class="btn world-btn" id="load-more">Load More</a>
				</div>
			</div>
		</div>
	</div>
</div>

<p id="id-category" class="d-none">@(category.id)</p>
